<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.andrew.com.study001.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="230dp">

            <ImageView
                android:id="@+id/photo001"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/photo001" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="1">

            <ImageButton
                android:id="@+id/upBtn001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onUpBtn001Clicked"
                app:srcCompat="@android:drawable/arrow_up_float" />

            <ImageButton
                android:id="@+id/downBtn001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="8"
                android:layout_row="0"
                android:onClick="onDownBtn001Clicked"
                app:srcCompat="@android:drawable/arrow_down_float" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_column="0"
            android:layout_row="2">

            <ImageView
                android:id="@+id/photo002"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/photo002" />
        </GridLayout>
    </GridLayout>
</LinearLayout>


